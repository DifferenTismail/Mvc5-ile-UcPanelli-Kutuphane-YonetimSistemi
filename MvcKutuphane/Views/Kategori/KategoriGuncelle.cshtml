@model MvcKutuphane.Models.Entity.Tbl_Kategori
@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div class="table table-bordered form-group">
        @Html.HiddenFor(k => k.ID)
        @Html.Label("Kategori Adı ")
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control mb-3" })
    </div>
    <div>
        <button class="btn btn-info">Güncelle</button>
    </div>
}

